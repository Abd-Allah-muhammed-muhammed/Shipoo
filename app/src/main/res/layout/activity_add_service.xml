<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_24"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/type"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@drawable/filde"
                android:gravity="center"
                 />

            <EditText
                android:id="@+id/location"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/filde"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/price"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/filde"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/cost"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/filde"
                android:gravity="center"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:lines="1"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="نوع الخدمه :"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:lines="1"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="center"
                android:text="مكان توصيلها :"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:lines="1"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="center"
                android:text="سعر الاوردر :"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:lines="1"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:gravity="center"
                android:text="قيمة الخدمة :"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/puplish_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_margin="@dimen/dimen_42"
        android:background="@drawable/edittext_rounded_corners2"
        android:text="Puplish"
        android:textColor="@color/black" />
</LinearLayout>

