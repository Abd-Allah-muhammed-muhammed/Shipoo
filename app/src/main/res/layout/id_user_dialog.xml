<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/layout_chose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:fontFamily="@font/cour"
            android:id="@+id/get_service"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/round_splaah"
            android:text="مندوب !"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <Button
            android:fontFamily="@font/cour"
            android:id="@+id/add_service"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_marginStart="@dimen/dimen_24"
            android:background="@drawable/round_splaah"
            android:text="بائع !"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>


    <TextView
        android:fontFamily="@font/cour"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_chose"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@drawable/back_text"
        android:gravity="center"
        android:text=" هل انت بائع ام مندوب ؟ "
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp" />


</RelativeLayout>