

<com.chauthai.swipereveallayout.SwipeRevealLayout

    android:layout_marginStart="@dimen/_5sdp"
android:layout_marginTop="@dimen/_5sdp"
android:id="@+id/swipe"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:mode="same_level"
app:dragEdge="left"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

<!-- Your secondary layout here -->
<RelativeLayout
android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal"
    android:id="@+id/Food_Item_Layout_Edit_"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content">

    <Button
        android:layout_marginStart="@dimen/_5sdp"
        android:text="حذف"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_close_black_24dp"
android:background="@drawable/red_button_background"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:id="@+id/noti_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<!-- Your main layout here -->
    <RelativeLayout

        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/back_text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableEnd="@drawable/ic_swap_horiz_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/agree_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/cour"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_8"
            android:text="تم قبول طلبك"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />




        <Button
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/Show_info_user"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/agree_"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_8"
            android:background="@drawable/back_btn"
            android:fontFamily="@font/cour"
            android:gravity="center"
            android:text="عرض المعلومات"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"
            />
    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>