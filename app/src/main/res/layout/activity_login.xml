<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.LoginActivity">


    <RelativeLayout

        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@drawable/curv">


        <TextView
            android:layout_marginTop="@dimen/dimen_42"
            android:id="@+id/shippo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shopoapp"
            android:gravity="center" />

        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/round"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_sh" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_centerVertical="true"
        android:layout_marginTop="36dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/id_phone"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/filde"
            android:gravity="center"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/idpass"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/filde"
            android:gravity="center"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp" />


        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/sign_in" />

        <TextView
            android:id="@+id/or"
            android:layout_width="@dimen/_150"
            android:layout_height="@dimen/dimen_42"
            android:layout_gravity="center"
            android:background="@drawable/or" />

        <Button

            android:id="@+id/sign_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/sign_up"
            android:onClick="singUp" />


    </LinearLayout>


</RelativeLayout>