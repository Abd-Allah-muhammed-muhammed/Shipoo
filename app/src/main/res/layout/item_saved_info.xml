<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
 >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/dimen_24"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/save_name"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="الاسم"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>




                <LinearLayout
                    android:id="@+id/layout_address"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_address"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="العنوان"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_phone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:drawableStart="@drawable/ic_phone_in_talk_black_24dp"

                        android:paddingStart="@dimen/_4sdp"
                        android:id="@+id/save_Phone"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="رقم الموبايل"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_mail"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_mail"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="البريد الالكتروني"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>





                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">

                    <TextView
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>




                <LinearLayout
                    android:id="@+id/layout_type"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_type"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="نوع المنتج"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_location_deleverd"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_location_delivery"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="مكان التوصليل"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_price"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_price"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="قيمة الخدمة"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_location"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_location"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="مكان الاستلام"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_cost"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/save_cost"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/cour"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="تكلفة الخدمة"
                        android:background="@drawable/back_text_right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />



                </LinearLayout>







                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/save_show_more"
                        android:text="اظهر المزيد"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:background="@drawable/back_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp">

                        <TextView
                            android:background="@drawable/back_text"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:background="@drawable/back_text_right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />



                    </LinearLayout>

                    <Button
android:visibility="gone"
                        android:layout_marginTop="@dimen/_4sdp"

                        android:id="@+id/save_finsh"
                        android:text="تم استلام المنتج"
                        android:fontFamily="@font/cour"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/back_text_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>





            </LinearLayout>




        </LinearLayout>



    </ScrollView>

</RelativeLayout>