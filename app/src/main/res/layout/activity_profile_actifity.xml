<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActifity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RatingBar

            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8"
            android:numStars="5"

            />


        <EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="الاسم"
            android:inputType="text"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8" />

        <EditText
            android:id="@+id/profile_mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="البريد الالكتروني"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8" />

        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="الهاتف"
            android:inputType="phone"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8" />

        <EditText

            android:id="@+id/profile_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="العنوان"
            android:inputType="text"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8" />

        <EditText

            android:id="@+id/profile_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="الرقم السري"
            android:inputType="text"
            android:paddingStart="@dimen/dimen_8"
            android:paddingEnd="@dimen/dimen_8" />

        <EditText
android:paddingEnd="@dimen/dimen_8"
            android:id="@+id/profile_re_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            android:background="@drawable/edittext_rounded_corners"
            android:hint="تاكيد الرقم السري"
            android:inputType="text"
            android:paddingStart="@dimen/dimen_8" />


    </LinearLayout>


    <Button
        android:id="@+id/profile_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginEnd="@dimen/dimen_24"
        android:layout_marginBottom="@dimen/dimen_24"
        android:background="@drawable/courn_edt"
        android:text=" تعديل البانات"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>